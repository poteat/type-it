{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": "tsconfig.eslint.json",
    "sourceType": "module",
    "ecmaFeatures": {
      "modules": true
    }
  },
  "env": {
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "plugins": [
    "@typescript-eslint",
    "jest",
    "prettier",
    "eslint-plugin-json"
  ],
  "extends": [
    "plugin:@typescript-eslint/eslint-recommended",
    "prettier/@typescript-eslint",
    "plugin:prettier/recommended",
    "plugin:json/recommended",
    "adjunct"
  ]
}